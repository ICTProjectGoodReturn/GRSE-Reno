<?xml version="1.0"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" version="2.0">
	<portlet>
		<portlet-name>borrowersportlet</portlet-name>
		<display-name>MFI Story Portlet</display-name>
		<portlet-class>org.goodreturn.borrowers.portlet.BorrowersPortlet</portlet-class>
		<init-param>
			<name>view-template</name>
			<value>/html/temp_bl/view_tempbl.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
		<portlet-info>
			<title>MFI Story Portlet</title>
			<short-title>Story Portlet</short-title>
			<keywords></keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
		
		
	<!-- Additional Roles added all WEAL (except weal-admin) / MFI -->
		<security-role-ref>
			<role-name>weal-owner</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>weal-marketing</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>weal-finance</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>weal-operations</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>weal-volunteer</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>mfi-leader</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>mfi-finance</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>mfi-story</role-name>
		</security-role-ref>
	</portlet>
	<portlet>
		<portlet-name>storyexporterportlet</portlet-name>
		<display-name>Story Exporter</display-name>
		<portlet-class>
			org.goodreturn.story.exporter.StoryExporterPortlet
		</portlet-class>
		<init-param>
			<name>view-template</name>
			<value>/html/story/export_story.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
		<portlet-info>
			<title>Story Exporter</title>
			<short-title>Story Exporter</short-title>
			<keywords></keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
</portlet-app>