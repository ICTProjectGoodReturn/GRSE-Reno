<?xml version="1.0"?>
<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 6.1.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_6_1_0.dtd">

<liferay-portlet-app>
	<portlet>
		<portlet-name>borrowersportlet</portlet-name>
		<icon>/icon.png</icon>
		<asset-renderer-factory>org.goodreturn.story.StoryAssetRendererFactory</asset-renderer-factory>
		<workflow-handler>org.goodreturn.story.StoryWorkflowHandler</workflow-handler>
		<instanceable>false</instanceable>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<footer-portlet-javascript>
			/js/main.js
		</footer-portlet-javascript>
		<css-class-wrapper>borrowersportlet-portlet</css-class-wrapper>
		<add-default-resource>true</add-default-resource>
	</portlet>
	<portlet>
		<portlet-name>storyexporterportlet</portlet-name>
		<icon>/icon.png</icon>
		<control-panel-entry-category>portal</control-panel-entry-category>
		<control-panel-entry-weight>1.0</control-panel-entry-weight>
		<control-panel-entry-class>org.goodreturn.story.exporter.StoryExporterUsersControlPanelEntry</control-panel-entry-class>
		<instanceable>false</instanceable>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<footer-portlet-javascript>
			/js/main.js
		</footer-portlet-javascript>
		<css-class-wrapper>
			storyexporterportlet-portlet
		</css-class-wrapper>
	</portlet>
	<role-mapper>
		<role-name>administrator</role-name>
		<role-link>Administrator</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>guest</role-name>
		<role-link>Guest</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>power-user</role-name>
		<role-link>Power User</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>user</role-name>
		<role-link>User</role-link>
	</role-mapper>
	
	<!-- Additional Roles added -->
	<role-mapper>
		<role-name>weal-owner</role-name>
		<role-link>WEAL Owner</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>weal-admin</role-name>
		<role-link>WEAL Admin</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>weal-marketing</role-name>
		<role-link>WEAL Marketing</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>weal-finance</role-name>
		<role-link>WEAL Finance</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>weal-operations</role-name>
		<role-link>WEAL Operations</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>weal-volunteer</role-name>
		<role-link>WEAL Volunteer</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>mfi-leader</role-name>
		<role-link>MFI Leader</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>mfi-finance</role-name>
		<role-link>MFI Finance</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>mfi-story</role-name>
		<role-link>MFI Story</role-link>
	</role-mapper>
</liferay-portlet-app>